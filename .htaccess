ErrorDocument 403 http://localhost/alanyadev/403.php
ErrorDocument 404 http://localhost/alanyadev/404.php
ErrorDocument 500 http://localhost/alanyadev/500.php


RewriteCond %{DOCUMENT_ROOT}/alanyadev/$1.php -f
RewriteRule ([^/]+)/?$ $1.php [L]